{
    "$schema": "http://json-schema.org/schema#",
    "$id": "https://fintlabs.no/schema/felles/kontaktperson.json",
    "type": "object",
    "properties": {
        "foreldreansvar": {
            "type": "boolean"
        },
        "systemId": {
            "type": "object", "$ref": "https://fintlabs.no/schema/felles/identifikator.json"
        },
        "type": {
            "type": "string"
        },

        "_links": {
            "type": "object",
            "properties": {

                "kontaktperson": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "href": {
                                "type": "string",
                                "format": "uri"
                            }
                        },
                        "required": [ "href" ]
                    }
                },
	
                "person": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "object",
                        "properties": {
                            "href": {
                                "type": "string",
                                "format": "uri"
                            }
                        },
                        "required": [ "href" ]
                    }
                },
	
                "self": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "href": {
                                "type": "string",
                                "format": "uri"
                            }
                        },
                        "required": [ "href" ]
                    }
                }
            },
            "additionalProperties": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "href": {
                            "type": "string",
                            "format": "uri"
                        }
                    },
                    "required": [ "href" ]
            }
            },
            "required": [
                "person",
                "self"
            ]
        }
    },
    "required": [
        "foreldreansvar", 
        "systemId", 
        "type", 
        "_links"
    ]
}
